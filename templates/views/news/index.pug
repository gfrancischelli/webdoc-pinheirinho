extends ../../layouts/base.pug
include ../../mixins/pagination.pug

block content
  .o-band: section(class="o-wrapper o-wrapper--slim@ds")
    h2.c-heading.c-heading--large= title
    .o-layout
      .o-layout__item: ul.list-ui
        each single in data.news.results
          li.o-list-ui__item
            div(class="flag flag--stack@mb")
              .flag__solid-cp: img.c-thumb-large( src=`${ single.heroUrl }?=width300`)
              .flag__fluid-cp.u-pad-left-large
                  a( href=single.url ): h3.c-heading.c-heading--small= single.title
                  P= single.content.createdAt
                  p !{ single.content.slice(0, 360) }...
                  .birbi

  +pagination(data.news)

