extends ../../layouts/base.pug

block content
  .o-wrapper
    h3 title
    ul.o-layout
      each gallery in data.galleries
        li.o-layout__item
          .o-card
            .o-card__figure: img.c-thumb-jumbo( src=gallery.heroUrl )
            .o-card__body
                a( href=gallery.url ): h5.o-card__title= gallery.title
                p !{ gallery.desc.slice(0, 260) }
